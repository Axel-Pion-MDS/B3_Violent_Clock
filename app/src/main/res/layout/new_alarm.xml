<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".AddAlarmActivity">


    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:amPmTextColor="@color/grey"
        android:background="#DCDCDC"
        android:backgroundTintMode="screen"
        android:headerBackground="@color/secondary"
        android:numbersTextColor="@color/light_black"
        android:timePickerMode="clock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/layout_bg"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker">

        <EditText
            android:id="@+id/alarmNameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:autofillHints=""
            android:backgroundTint="@color/grey"
            android:hint="Mon réveil"
            android:inputType="text"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textColorHint="@color/hint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timePicker" />

        <CheckBox
            android:id="@+id/isRepeating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:checked="false"
            android:text="Répéter"
            android:textColor="@color/grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/alarmNameInput" />

        <EditText
            android:id="@+id/alarmMusic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:autofillHints=""
            android:backgroundTint="@color/grey"
            android:hint="Choisir une musique"
            android:inputType="text"
            android:minHeight="50dp"
            android:textAlignment="center"
            android:textColor="@color/grey"
            android:textColorHint="@color/hint" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/layout_bg"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">


    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:stretchColumns="0,1"
        app:layout_constraintBottom_toBottomOf="@+id/layout_content">

        <TableRow>

            <Button
                android:id="@+id/goBack"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:width="170dp"
                android:backgroundTint="@color/grey"
                android:text="Retour"
                android:textColor="@color/black"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/addAlarmFromNewAlarm"
                android:layout_gravity="center"
                android:width="170dp"
                android:text="Ajouter"
                android:textColor="@color/grey" />
        </TableRow>
    </TableLayout>


</androidx.constraintlayout.widget.ConstraintLayout>